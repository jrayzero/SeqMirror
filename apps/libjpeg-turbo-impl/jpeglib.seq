from  cola.block import Block

# quantization tables
class JQUANT_TBL:
  quantval: Block[u16]
  sent_table: bool

  def __init__(self, sent_table: bool = False):
    self.quantval = Block[u16](DCTSIZE,DCTSIZE)
    self.sent_table = sent_table

# huffman tables
class JHUFF_TBL:
  bits: Block[u8]
  huffval: Block[u8] 
  sent_table: bool

  def __init__(self, sent_table: bool = False):
    self.bits = Block[u8](17)
    self.huffval = Block[u8](256)
    self.sent_table = sent_table  
